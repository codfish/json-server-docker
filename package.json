{
  "name": "json-server-docker",
  "version": "0.0.0-semantically-released",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --exec ./main.sh",
    "format": "cod-scripts format",
    "lint": "cod-scripts lint"
  },
  "dependencies": {
    "@babel/runtime": "7.22.3",
    "@faker-js/faker": "8.0.2",
    "@leaflink/dom-testing-utils": "^1.2.1",
    "@types/node": "^20.2.6",
    "chalk": "^5.2.0",
    "jwt-decode": "^3.1.2",
    "lodash": "4.17.21",
    "nodemon": "2.0.22"
  },
  "devDependencies": {
    "cod-scripts": "^12.1.0"
  },
  "nodemonConfig": {
    "ignore": [
      "api/",
      "package.json",
      "package-lock.json"
    ],
    "ext": "js,mjs,ts,json,sh"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/cod-scripts/eslint.js"
    ],
    "ignorePatterns": [
      "node_modules",
      ".github",
      "api",
      "public"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "cod-scripts pre-commit"
    }
  }
}
