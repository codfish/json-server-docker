    "lodash": "4.17.23",
    "nodemon": "3.1.13",
    "typescript": "^4.9.5",
    "zx": "^7.2.3"
  },
  "devDependencies": {
    "cod-scripts": "^12.1.0"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/",
      "package.json",
      "package-lock.json"
    ],
    "ext": "js,mjs,ts,json,sh"
